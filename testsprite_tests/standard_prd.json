        "api_doc": {
          "openapi": "3.0.0",
          "paths": {
            "/api/rfps": {
              "get": {
                "summary": "Get all RFPs with pagination and filtering",
                "parameters": [
                  {
                    "name": "status",
                    "in": "query",
                    "schema": {
                      "type": "string"
                    }
                  },
                  {
                    "name": "portalId",
                    "in": "query",
                    "schema": {
                      "type": "string"
                    }
                  },
                  {
                    "name": "page",
                    "in": "query",
                    "schema": {
                      "type": "string",
                      "default": "1"
                    }
                  },
                  {
                    "name": "limit",
                    "in": "query",
                    "schema": {
                      "type": "string",
                      "default": "20"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "List of RFPs with pagination"
                  }
                }
              },
              "post": {
                "summary": "Create a new RFP",
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/RFP"
                      }
                    }
                  }
                },
                "responses": {
                  "201": {
                    "description": "RFP created successfully"
                  }
                }
              }
            },
            "/api/rfps/{id}": {
              "get": {
                "summary": "Get a specific RFP by ID",
                "parameters": [
                  {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                      "type": "string"
                    }
                  }
                ],
                "responses": {
                  "200": {
                    "description": "RFP details"
                  },
                  "404": {
                    "description": "RFP not found"
                  }
                }
              }
            },
            "/api/rfps/{id}/documents": {
              "get": {
                "summary": "Get documents for a specific RFP",
