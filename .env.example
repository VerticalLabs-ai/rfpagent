# =============================================================================
# RFP Agent - Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
PGDATABASE="rfpagent"
PGHOST="localhost"
PGPORT="5432"
PGUSER="rfpuser"
PGPASSWORD="your-secure-password"

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET="your-random-session-secret-min-32-chars"
SESSION_MAX_AGE="86400000"  # 24 hours in milliseconds

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY="sk-proj-..."
OPENAI_DEFAULT_MODEL="gpt-5"
OPENAI_FAST_MODEL="gpt-5-mini"

# Anthropic Configuration
ANTHROPIC_API_KEY="sk-ant-api03-..."
ANTHROPIC_DEFAULT_MODEL="claude-sonnet-4-5"
ANTHROPIC_FAST_MODEL="claude-3-5-haiku-latest"

# Google AI Configuration (Optional)
GOOGLE_API_KEY="AIza..."
GOOGLE_DEFAULT_MODEL="gemini-2.5-pro"
GOOGLE_FAST_MODEL="gemini-2.5-flash"

# =============================================================================
# FEDERAL DATA APIS
# =============================================================================
SAM_GOV_API_KEY="SAM-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# ML Model Configuration
EMBEDDING_CACHE_SIZE="1000"  # Maximum number of cached embeddings (LRU eviction)

# =============================================================================
# BROWSERBASE CONFIGURATION
# =============================================================================
BROWSERBASE_API_KEY="bb_live_..."
BROWSERBASE_PROJECT_ID="..."

# =============================================================================
# 1PASSWORD CONFIGURATION (Optional)
# =============================================================================
OP_SERVICE_ACCOUNT_TOKEN="ops_..."

# =============================================================================
# GOOGLE CLOUD STORAGE (Optional)
# =============================================================================
GCS_PROJECT_ID="your-project-id"
GCS_BUCKET_NAME="your-bucket-name"
GCS_CREDENTIALS_PATH="/path/to/credentials.json"

# =============================================================================
# SENDGRID EMAIL (Optional)
# =============================================================================
SENDGRID_API_KEY="SG..."
SENDGRID_FROM_EMAIL="noreply@rfpagent.app"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV="development"  # development | production | test
PORT="5000"
HOST="0.0.0.0"
LOG_LEVEL="info"  # error | warn | info | debug
AUTO_WORK_DISTRIBUTION="true"

# Company Configuration
COMPANY_NAME="iByte Enterprises LLC"  # Company name used in proposals and documents

# =============================================================================
# MONITORING & OBSERVABILITY (Production)
# =============================================================================
# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN="https://your-sentry-key@your-org-id.ingest.us.sentry.io/your-project-id"
SENTRY_ENVIRONMENT="production"

# Application Performance Monitoring
APM_SERVER_URL=""
APM_SECRET_TOKEN=""

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
GCS_BACKUP_BUCKET="rfp-agent-backups"
BACKUP_RETENTION_DAYS="30"

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
PAGERDUTY_SERVICE_KEY=""

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CORS Configuration
CORS_ORIGIN="http://localhost:5000,https://rfpagent.app"

# Cookie Configuration
COOKIE_SECURE="false"  # Set to true in production
COOKIE_SAME_SITE="lax"  # lax | strict | none

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS="true"
ENABLE_AI_AGENTS="true"
ENABLE_PORTAL_MONITORING="true"
ENABLE_DEBUG_MODE="false"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Browser automation
PUPPETEER_EXECUTABLE_PATH=""  # Leave empty to use bundled Chromium

# Development helpers
SKIP_MIGRATIONS="false"
SEED_DATABASE="false"
